<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ThongtinbanquyenActivity">


    <TextView
        android:textColor="#000000"
        android:textStyle="bold|normal"
        android:layout_gravity="center"
        android:text="Thông Tin Bản Quyền"
        android:textSize="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/banquyen" />
    <TextView
        android:padding="20dp"
        android:layout_gravity="center"
        android:text="@string/tenshop"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView      android:padding="20dp"
        android:layout_gravity="center"
        android:text="Phone : 123456789"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView      android:padding="20dp"
        android:layout_gravity="center"
        android:text="Email : shopgiaydep@gmail.com"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView      android:padding="20dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Location : Hà Cối" />

</LinearLayout>